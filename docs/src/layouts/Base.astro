---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "AI Oracle for LeekWars - Systematic experimentation meets ancient wisdom" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content={description}>
  <title>{title} | Priap.OS</title>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@700&family=Inter:wght@400;500;600&family=JetBrains+Mono:wght@400&display=swap" rel="stylesheet">

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}images/logo/logo-v3-minimal-eye.svg`}>

  <!-- Styles -->
  <style is:global>
    @import '../styles/charte.css';
  </style>
</head>
<body>
  <slot />
</body>
</html>
